<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="Novo Produto">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="20">
        <Entry x:Name="txt_descricao" Placeholder="Descrição do produto" />
        <Entry x:Name="txt_quantidade" Placeholder="Quantidade" Keyboard="Numeric"/>
        <Entry x:Name="txt_preco" Placeholder="Preço" Keyboard="Numeric"/>
    </VerticalStackLayout>
</ContentPage>
